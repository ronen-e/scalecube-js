{
  "extends": "tslint-config-airbnb",
  "rules": {
    "max-line-length": {
      "options": 120,
      "severity": "warning"
    },
    "trailing-comma": [
      false,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "function-name": [
      true,
      {
        "method-regex": "^[a-z][\\w\\d]+\\$?$",
        "function-regex": "^[a-z][\\w\\d]+\\$?$"
      }
    ],
    "variable-name": {
      "options": [
        "check-format"
      ],
      "severity": "warning"
    },
    "mocha-avoid-only": [
      false
    ],
    "no-console": [
      true
    ]
  }
}
